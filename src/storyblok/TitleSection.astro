---

import { storyblokEditable, renderRichText } from "@storyblok/astro";
import { Image } from "astro:assets";
const { blok } = Astro.props;
const renderedRichText = renderRichText(blok.description)

---

<div class="w-full" {...storyblokEditable(blok)}>
    <div class="container m-auto">
            <div class="animate-zoom-in text-center">
                <p class="text-2xl text-primary">{blok.heading}</p>
                <h2 class="text-6xl mb-5 text-dark">{blok.title}</h2>
                {renderedRichText &&
                <div class="mt-8">
                    <div class="prose-ul:list-disc prose-ul:ps-6 prose-li:mb-2" set:html={renderedRichText}></div>
            </div>
            }
        </div>
</div>
