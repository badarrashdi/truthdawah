---
import { storyblokEditable } from "@storyblok/astro";
import { Image } from "astro:assets";

const { blok } = Astro.props;
---

<div class="hero-header w-full bg-white relative min-h-screen flex items-center" {...storyblokEditable(blok)}>
    <Image src={blok.image.filename} width={1600} height={800} alt={blok.image.alt || blok.title } class="w-full h-full absolute object-cover" />
    <div class="container mx-auto relative z-10">
        <div class="flex">
            <div class="hero-header-inner lg:w-7/12">
                <div class="animate-zoom-in">
                    <p class="text-2xl text-dark">{blok.title}</p>
                    <h1 class="text-7xl mb-5 text-dark">{blok.description}</h1>
                    <a href={blok.CTA.cached_url || '/about-us'} class="btn btn-primary py-3 px-5">Read More</a>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .hero-header .hero-header-inner {
        padding: 3rem;
        background: rgba(255, 255, 255, .5);
    }
    </style>