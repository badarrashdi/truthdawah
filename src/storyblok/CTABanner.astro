---

import { storyblokEditable } from "@storyblok/astro";
const { blok } = Astro.props;

---

<div class="container mx-auto text-center bg-primary py-10 md:py-14 animate-fade-in" data-wow-delay="0.1s" {...storyblokEditable(blok)}>
    <div class="flex flex-col md:flex-row gap-4 items-center">
        <div class="w-full lg:w-2/12 text-white">
            <i class="fa fa-mosque fa-5x"></i>
        </div>
        <div class="w-full lg:w-7/12 text-center lg:text-left">
            <h2 class="mb-0 text-3xl md:text-4xl">{blok.title}</h2>
        </div>
        <div class="w-full lg:w-3/12">
            <a href={blok.CTA.cached_url} class="bg-white hover:text-primary py-4 px-4 text-lg text-black">Learn More</a>
        </div>
    </div>
</div>
